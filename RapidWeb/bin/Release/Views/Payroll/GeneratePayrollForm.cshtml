@model RapidWeb.ViewModel.PayrollGenerate
@{
    ViewBag.Title = "Generate Payroll Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xl-12 order-xl-1">
    <div class="card bg-secondary shadow">
        <div class="card-header bg-white border-0">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">@ViewBag.Title</h3>
                </div>
                <div class="col-4">
                    <a class="float-right btn btn-primary btn-sm" href="@Url.Action("Index")">Back</a>
                </div>
            </div>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("GeneratePayrollView", "Payroll", FormMethod.Post, new { autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-sm-2 col-md-2">
                        <div class="form-group">
                            <p class="ct-content">Department ID</p>
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-4">
                        <div class="form-group">
                            <div class="input-group input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text prefixId">DPT</span>
                                </div>
                                @Html.TextBoxFor(U => U.DepartmentIdFrom, new { @class = "form-control form-control-alternative" })
                            </div>
                            @Html.ValidationMessageFor(U => U.DepartmentIdFrom, "", new { @class = "invalid-feedback", @style = "display:block" })
                        </div>
                    </div>
                    <div class="col-sm-2 col-md-1 text-center">
                        <div class="form-group">
                            <p class="ct-content">TO</p>
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-4">
                        <div class="form-group">
                            <div class="input-group input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text prefixId">DPT</span>
                                </div>
                                @Html.TextBoxFor(U => U.DepartmentIdTo, new { @class = "form-control form-control-alternative" })
                            </div>
                            @Html.ValidationMessageFor(U => U.DepartmentIdTo, "", new { @class = "invalid-feedback", @style = "display:block" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-2 col-md-2">
                        <div class="form-group">
                            <p class="ct-content">Month</p>
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-4">
                        <div class="form-group">
                            @Html.TextBoxFor(U => U.Month, new { @type = "month", @class = "form-control form-control-alternative" })
                            @Html.ValidationMessageFor(U => U.Month, "", new { @class = "invalid-feedback", @style = "display:block" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Generate Payroll" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}