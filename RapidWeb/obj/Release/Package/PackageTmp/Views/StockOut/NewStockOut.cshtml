@using RapidWeb.Models
@model IEnumerable<RapidWeb.Models.Complain>
@{
    ViewBag.Title = "New Stock-Out";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xl-12 order-xl-1">
    <div class="card bg-secondary shadow">
        <div class="card-header bg-white border-0">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">@ViewBag.Title</h3>
                </div>
                <div class="col-4">
                    <a class="float-right btn btn-primary btn-sm" href="@Url.Action("Index","StockOut")">Back To List</a>
                </div>
            </div>
        </div>

        <div class="card-body">

            @using (Html.BeginForm("StockOutForm", "StockOut", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group focused">
                            <label class="form-control-label" for="Id">Complain Id</label>
                            <select class="form-control form-control-alternative valid" id="Id" name="Id" required>
                                <option value="-1">Select Complain ID</option>
                                @foreach (Complain complain in @Model)
                                {
                                    <option value="@complain.Id">@complain.PrefixId </option>
                                }
                            </select>
                            <span class="invalid-feedback field-validation-error" style="display: block">
                                <span id="Id-error" class=""></span>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input id="SubmitBtn" type="submit" value="Submit" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
    <script type="text/javascript">
        $("#SubmitBtn").click(function() {

            if ($("#Id").val() === "-1") {
                $("#Id-error").text("Complain Id is required.");
                return false;
            } else {
                $("#Id-error").text("");
                return true;
            }   
        })
    </script>
}
