@using RapidWeb.Models
@model IEnumerable<RapidWeb.Models.Department>
@{
    ViewBag.Title = "New Payroll From";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xl-12 order-xl-1">
    <div class="card bg-secondary shadow">
        <div class="card-header bg-white border-0">
            <div class="row align-items-center">
                <div class="col-4">
                    <h3 class="mb-0">@ViewBag.Title</h3>
                </div>
                <div class="col-8">
                    <a class="float-right btn btn-primary btn-sm" href="@Url.Action("Index")">Back</a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-sm-6 col-md-3">
                    <div class="form-group">
                        <label class="form-control-label" for="DepartmentId">Department ID</label>
                        <select class="form-control form-control-alternative" id="DepartmentId" name="DepartmentId">
                            <option value="">Select Department</option>
                            @foreach (Department department in Model)
                            {
                                <option value="@department.Id">@department.PrefixId --- @department.Name</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 col-md-3">
                    <div class="form-group">
                        <label class="form-control-label" for="MonthYear">Month</label>
                        <input class="form-control form-control-alternative" id="MonthYear" name="MonthYear" type="month">
                    </div>
                </div>
            </div>

            <div style="overflow: scroll">
                <div class="row">
                    <div class="col-sm-4 col-md-12">
                        <table id="Table" class="table text-align-center table-bordered table-grid">
                            <thead class="text-primary font-weight-bold">
                                <tr class="text-center align-middle">
                                    <th scope="col" colspan="5">Description</th>
                                    <th scope="col" colspan="5">Allowances</th>
                                    <th scope="col" colspan="2">Deductions</th>
                                    <th scope="col" rowspan="2" style="min-width: 200px">Remarks</th>
                                </tr>
                                <tr>
                                    <th scope="col">Emp. ID</th>
                                    <th scope="col">Emp. Name</th>
                                    <th scope="col">Designation</th>
                                    <th scope="col">City</th>
                                    <th scope="col" style="min-width: 115px">Basic Salary</th>
                                    <th scope="col" style="min-width: 115px">House</th>
                                    <th scope="col" style="min-width: 115px">Utility</th>
                                    <th scope="col" style="min-width: 115px">Transport</th>
                                    <th scope="col" style="min-width: 115px">Bonus</th>
                                    <th scope="col" style="min-width: 115px">Other</th>
                                    <th scope="col" style="min-width: 115px">Tax</th>
                                    <th scope="col" style="min-width: 115px">Others</th>
                                </tr>
                            </thead>
                            <tbody>
                                @*<tr class="text-dark">
                                    <td style="">
                                        abc
                                    </td>
                                    <td style="">
                                        @employee.Id
                                    </td>
                                    <td style="">
                                        @employee.Id
                                    </td>
                                    <td style="">
                                        @employee.Id
                                    </td>
                                    <td style="">
                                        @employee.Id
                                    </td>
                                    <td style="">
                                        @employee.Id
                                    </td>
                                    <td style="">
                                        @employee.Id
                                    </td>
                                    <td style="">
                                        @employee.Id
                                    </td>
                                    <td style="">
                                        @employee.Id
                                    </td>
                                    <td style="">
                                        @employee.Id
                                    </td>
                                    <td style="">
                                        @employee.Id
                                    </td>
                                <input type="text" class="ProductTotalCost form-control form-control-alternative" value="0" disabled="">
                                    <td style="">
                                        @employee.Id
                                    </td>
                                </tr>*@
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-sm-4 col-md-7">
                    <div class="form-group">
                        <input id="SaveWorkBtn" type="submit" value="Save Work" class="btn btn-success">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div id="AlertMessageMain" class="alert alert-success alert-dismissible fade show" style="display: none" role="alert">
                        <span id="AlertMessage"></span>
                        <button id="AlertMessageClose" type="button" class="close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {

            $("#SaveWorkBtn").click(function() {
                var salaries = [];

                $("#Table tbody tr").each(function() {
                    var empSalary = {};

                    empSalary.EmployeeId = $(this).find(".EmpId").text().trim();
                    empSalary.BasicSalary = $(this).find(".EmpBasicSalaryTxt").val();
                    empSalary.HousingAllowance = $(this).find(".EmpHouseTxtAllowance").val();
                    empSalary.UtilityAllowance = $(this).find(".EmpUtilityAllowance").val();
                    empSalary.TransportAllowance = $(this).find(".EmpTransportAllowance").val();
                    empSalary.BonusAllowance = $(this).find(".EmpBonusAllowance").val();
                    empSalary.OtherAllowance = $(this).find(".EmpOtherAllowance").val();
                    empSalary.TaxDeduction = $(this).find(".EmpTaxDeduction").val();
                    empSalary.OtherDeduction = $(this).find(".EmpOtherDeduction").val();
                    empSalary.Remarks = $(this).find(".Remark").val();

                    salaries.push(empSalary);
                });

                var payroll = {
                    DepartmentId: $("#DepartmentId").val(),
                    Month: parseInt($("#MonthYear").val().split('-')[1]),
                    Year: parseInt($("#MonthYear").val().split('-')[0]),

                    EmployeeSalaries: salaries
                };

                $("#AlertMessage").text("Loading.");
                $("#AlertMessageMain").addClass("alert-warning");
                $("#AlertMessageMain").removeClass("alert-danger alert-success");
                $("#AlertMessageMain").css("display", "block");

                $.ajax({
                    url: "/Payroll/SavePayroll",
                    type: "POST",
                    data: JSON.stringify(payroll),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function () {

                        $("#AlertMessage").text("Success.");
                        $("#AlertMessageMain").addClass("alert-success");
                        $("#AlertMessageMain").removeClass("alert-danger alert-warning");
                    },
                    error: function(err,abc) {

                        $("#AlertMessage").text("Failed. You have filled an invalid data or payroll of this month has already been generated.");
                        $("#AlertMessageMain").addClass("alert-danger");
                        $("#AlertMessageMain").removeClass("alert-success alert-warning");
                    }
                });
            });

            $("#AlertMessageClose").click(function () {
                $("#AlertMessageMain").css("display", "none");
            });


            $("#DepartmentId").change(function() {
                var departmentId = $(this).val();

                $("#Table tbody").empty();

                if (departmentId !== "") {
                    $.ajax({
                        url: "/Employee/GetEmployeesByDepartment/" + departmentId,
                        type: "POST",
                        success: function(employees) {
                            $.each(employees, function (index, item)
                            {
                                var tr = "<tr class='text-dark'>" +
                                    "<td class='EmpId' style='' hidden>" +
                                    item.Id +
                                    "</td>" +
                                    "<td class='EmpPrefixId' style=''>" +
                                    item.PrefixId +
                                    "</td>" +
                                    "<td class='EmpName' style=''>" +
                                    item.Name +
                                    "</td>" +
                                    "<td class='EmpDesignation' style=''>" +
                                    item.Designation +
                                    "</td>" +
                                    "<td class='EmpCity' style=''>" +
                                    item.City.Name +
                                    "</td>" +
                                    "<td class='' style=''>" +
                                    "<input type='text' class='EmpBasicSalaryTxt form-control form-control-alternative' value=" + item.Salary +" disabled>" +
                                    "</td>" +
                                    "<td class='' style=''>" +
                                    "<input type='text' class='EmpHouseTxtAllowance form-control form-control-alternative' value=" + item.HouseRent + " disabled>" +
                                    "</td>" +
                                    "<td class='' style=''>" +
                                    "<input type='text' class='EmpUtilityAllowance form-control form-control-alternative' value=" + item.UtilityAllowance + " disabled>" +
                                    "</td>" +
                                    "<td class='' style=''>" +
                                    "<input type='text' class='EmpTransportAllowance form-control form-control-alternative' value=" + item.TransportAllowance + " disabled>" +
                                    "</td>" +
                                    "<td class='' style=''>" +
                                    "<input type='text' class='EmpBonusAllowance form-control form-control-alternative' value=" + item.BonusAllowance + ">" +
                                    "</td>" +
                                    "<td class='' style=''>" +
                                    "<input type='text' class='EmpOtherAllowance form-control form-control-alternative' value=" + item.OtherBenefits + ">" +
                                    "</td>" +
                                    "<td class='' style=''>" +
                                    "<input type='text' class='EmpTaxDeduction form-control form-control-alternative' value=>" +
                                    "</td>" +
                                    "<td class='' style=''>" +
                                    "<input type='text' class='EmpOtherDeduction form-control form-control-alternative' value=>" +
                                    "</td>" +
                                    "<td class='' style=''>" +
                                    "<input type='text' class='Remark form-control form-control-alternative' value=>" +
                                    "</td>" +
                                    "</tr>";

                                $("table tbody").append(tr);
                            });
                        },
                        error: function () {

                        }
                    });
                }
            });
        });
    </script>
}