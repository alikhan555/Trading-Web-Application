            </div>

            <div class="row">
                <div class="col-sm-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(U => U.SalesTaxInvoice.TotalExcludingSaleTex, new { @class = "form-control-label" })
                        @Html.TextBoxFor(U => U.SalesTaxInvoice.TotalExcludingSaleTex, new { @disabled=true, @class = "form-control form-control-alternative" })
                    </div>
                </div>
                <div class="col-sm-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(U => U.SalesTaxInvoice.SaleTexAmountPayable, new { @class = "form-control-label" })
                        @Html.TextBoxFor(U => U.SalesTaxInvoice.SaleTexAmountPayable, new { @class = "form-control form-control-alternative" })
                    </div>
                </div>
                <div class="col-sm-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(U => U.SalesTaxInvoice.TotalAmount, new { @class = "form-control-label" })
                        @Html.TextBoxFor(U => U.SalesTaxInvoice.TotalAmount, new { @disabled=true, @class = "form-control form-control-alternative" })
                    </div>
                </div>
