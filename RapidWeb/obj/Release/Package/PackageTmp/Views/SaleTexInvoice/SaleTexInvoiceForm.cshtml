                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(U => U.SalesTaxInvoice.ComplainId, new { @class = "form-control-label" })
                        @Html.DropDownListFor(U => U.SalesTaxInvoice.ComplainId, new SelectList(Model.Complains, "Id", "PrefixId"), "Select Complain ID", new { @type = "date", @class = "form-control form-control-alternative" })
                    </div>
                </div>

                <div class="col-sm-6 col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(U => U.SalesTaxInvoice.PurchaseOrderId, new { @class = "form-control-label" })
                        @Html.DropDownListFor(U => U.SalesTaxInvoice.PurchaseOrderId, new SelectList(Model.PurchaseOrders, "Id", "PrefixId"), "Select Purchase Order ID", new { @type = "date", @class = "form-control form-control-alternative" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(U => U.SalesTaxInvoice.CustomerName, new { @class = "form-control-label" })
                        @Html.TextBoxFor(U => U.SalesTaxInvoice.CustomerName, new { @class = "form-control form-control-alternative" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(U => U.SalesTaxInvoice.CustomerAddress, new { @class = "form-control-label" })
                        @Html.TextBoxFor(U => U.SalesTaxInvoice.CustomerAddress, new { @class = "form-control form-control-alternative" })
                    </div>
                </div>
                <div class="col-sm-6 col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(U => U.SalesTaxInvoice.CoAddress, new { @class = "form-control-label" })
                        @Html.TextBoxFor(U => U.SalesTaxInvoice.CoAddress, new { @class = "form-control form-control-alternative" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(U => U.SalesTaxInvoice.PSTRNo, new { @class = "form-control-label" })
                        @Html.TextBoxFor(U => U.SalesTaxInvoice.PSTRNo, new { @class = "form-control form-control-alternative" })
                    </div>
                </div>
                <div class="col-sm-6 col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(U => U.SalesTaxInvoice.CoPSTRNo, new { @class = "form-control-label" })
                        @Html.TextBoxFor(U => U.SalesTaxInvoice.CoPSTRNo, new { @class = "form-control form-control-alternative" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(U => U.SalesTaxInvoice.NTNNo, new { @class = "form-control-label" })
                        @Html.TextBoxFor(U => U.SalesTaxInvoice.NTNNo, new { @class = "form-control form-control-alternative" })
                    </div>
                </div>
                <div class="col-sm-6 col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(U => U.SalesTaxInvoice.CoNTNNo, new { @class = "form-control-label" })
                        @Html.TextBoxFor(U => U.SalesTaxInvoice.CoNTNNo, new { @class = "form-control form-control-alternative" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(U => U.SalesTaxInvoice.WorkNature, new { @class = "form-control-label" })
                        @Html.TextBoxFor(U => U.SalesTaxInvoice.WorkNature, new { @class = "form-control form-control-alternative" })
                    </div>
