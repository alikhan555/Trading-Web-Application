@using RapidWeb.Models

@{
    ViewBag.Title = "Purchase Request List";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int roleId = ((User)HttpContext.Current.Session["User"]).RoleId;
}

<div class="col-xl-12 order-xl-1">
    <div class="card bg-secondary shadow">
        <div class="card-header bg-white border-0">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">@ViewBag.Title</h3>
                </div>
                <div class="col-4">
                    @if (roleId != Role.RTPUser && roleId != Role.Activity)
                    {
                        <a class="float-right btn btn-primary btn-sm" href="@Url.Action("PurchaseRequestForm")">New Purchase Request</a>
                    }
                    <a class="float-right btn btn-primary btn-sm" href="@Url.Action("AdvanceSearch")">Advance Search</a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <table id="Table" class="table text-align-center table-bordered table-grid">
                <thead class="text-primary font-weight-bold">
                    <tr>
                        <th scope="col">Purchase Request ID</th>
                        <th scope="col">Creation Date</th>
                        <th scope="col">Request For</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PurchaseRequest purchaseRequest in Model)
                    {
                        <tr class="text-dark">

                            <td style="">
                                @purchaseRequest.PrefixId
                            </td>
                            <td style="">
                                @purchaseRequest.CreationDateTime.ToShortDateString()
                            </td>
                            <td style="">
                                @purchaseRequest.RequestFor
                            </td>
                            <td>
                                @*<a href="@Url.Action("ComplainAssignment", "Complain", new {id = purchaseRequest.Id})" style="cursor: pointer" class="ml-2 text-primary EditUser"><i class="fa fa-pen"></i></a>*@
                                @*<a href="@Url.Action("ChangeActiveStatus", "Product", new {id = complain.Id})" style="cursor: pointer" class="ml-2 text-primary ChangeActiveStatusUser"><i class="fa fa-trash"></i></a>*@
                                <a href="@Url.Action("PurchaseRequestDetail", "PurchaseRequest", new {id = purchaseRequest.Id})" style="cursor: pointer" class="ml-2 text-primary ViewUser"><i class="fa fa-eye"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">

        $(document).ready(function () {
            $("#Table").dataTable();
        });

        $(".form-inline").css({
            width: 1000
        });
    </script>
}
<style>
    .form-inline {
        display: block;
    }
</style>
