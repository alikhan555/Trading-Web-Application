@model RapidWeb.ViewModel.StockDetailViewModel
@{
    ViewBag.Title = "Advance Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xl-12 order-xl-1">
    <div class="card bg-secondary shadow">
        <div class="card-header bg-white border-0">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">@ViewBag.Title</h3>
                </div>
                <div class="col-4">
                    <a class="float-right btn btn-primary btn-sm" href="@Url.Action("Index")">Back</a>
                </div>
            </div>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("StockInDetailReport", "StockIn", FormMethod.Post, new{ autocomplete="off"}))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-sm-2 col-md-2">
                        <div class="form-group">
                            <p class="ct-content">Date</p>
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-4">
                        <div class="form-group">
                            <div class="input-group input-group-alternative">
                                @Html.TextBoxFor(U => U.DateFrom, new { @class = "form-control form-control-alternative datepicker" })
                            </div>
                            @Html.ValidationMessageFor(U => U.DateFrom, "", new { @class = "invalid-feedback", @style = "display:block" })
                        </div>
                    </div>
                    <div class="col-sm-2 col-md-1 text-center">
                        <div class="form-group">
                            <p class="ct-content">TO</p>
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-4">
                        <div class="form-group">
                            <div class="input-group input-group-alternative">
                                @Html.TextBoxFor(U => U.DateTo, new { @class = "form-control form-control-alternative datepicker" })
                            </div>
                            @Html.ValidationMessageFor(U => U.DateTo, "", new { @class = "invalid-feedback", @style = "display:block" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-2 col-md-2">
                        <div class="form-group">
                            <p class="ct-content">Product ID</p>
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-4">
                        <div class="form-group">
                            @Html.DropDownListFor(U => U.ProductId, new SelectList(Model.Products, "Id", "Description"), "Select Product", new { @class = "form-control form-control-alternative" })
                            @Html.ValidationMessageFor(U => U.ProductId, "", new { @class = "invalid-feedback", @style = "display:block" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Submit" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}